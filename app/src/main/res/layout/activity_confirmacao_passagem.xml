<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmacao_Passagem">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_checklist_24"
        tools:ignore="VectorDrawableCompat" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button13"
                android:layout_width="305dp"
                android:layout_height="98dp"
                android:layout_marginStart="51dp"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:layout_marginBottom="64dp"
                android:background="@drawable/btn_back_stroke"
                android:enabled="false"
                app:backgroundTint="#F6F6F6"
                app:layout_constraintBottom_toTopOf="@+id/button14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ori9"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/button14"
                android:layout_width="305dp"
                android:layout_height="98dp"
                android:layout_marginStart="51dp"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="51dp"
                android:layout_marginRight="51dp"
                android:background="@drawable/btn_back_stroke"
                android:enabled="false"
                app:backgroundTint="#F6F6F6"
                app:icon="@drawable/ic_arrows_24"
                app:iconGravity="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button13"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="95dp"
                android:layout_height="39dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="28dp"
                android:text="Quantidade de Passageiros"
                android:textColor="#2C2C2C"
                app:layout_constraintStart_toStartOf="@+id/button13"
                app:layout_constraintTop_toTopOf="@+id/button13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="28dp"
                android:layout_height="21dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="28dp"
                android:text="Ida"
                android:textColor="#2C2C2C"
                app:layout_constraintStart_toStartOf="@+id/button14"
                app:layout_constraintTop_toTopOf="@+id/button14" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:text="R$800"
                android:textColor="#2C2C2C"
                app:layout_constraintStart_toStartOf="@+id/button14"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="44dp"
                android:layout_height="19dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="16dp"
                android:text="R$600"
                android:textColor="#2C2C2C"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="Volta"
                android:textColor="#2C2C2C"
                app:layout_constraintEnd_toEndOf="@+id/button14"
                app:layout_constraintTop_toTopOf="@+id/button14" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="18dp"
                android:layout_height="21dp"
                android:layout_marginTop="36dp"
                android:text="1"
                android:textColor="#2C2C2C"
                app:layout_constraintEnd_toEndOf="@+id/button13"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/button13" />

            <Button
                android:id="@+id/button15"
                android:layout_width="113dp"
                android:layout_height="41dp"
                android:layout_marginStart="148dp"
                android:layout_marginLeft="148dp"
                android:layout_marginTop="93dp"
                android:layout_marginEnd="148dp"
                android:layout_marginRight="148dp"
                android:background="@drawable/btn_geral"
                android:onClick="onClick"
                android:text="@string/btn_con"
                android:textSize="12sp"
                app:backgroundTint="#00B976"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button14" />

            <TextView
                android:id="@+id/txt_ori9"
                android:layout_width="118dp"
                android:layout_height="22dp"

                android:layout_marginStart="44dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="247dp"
                android:layout_marginRight="247dp"
                android:drawablePadding="10sp"
                android:paddingLeft="10sp"
                android:text="Confirmação"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>